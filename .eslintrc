{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    },
    "settings": {
        "react": {
          "createClass": "createReactClass", 
          "pragma": "React", 
          "version": "^16.7.0"
        }
    }
}